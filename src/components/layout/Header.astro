---
import Nav from "./Nav.astro"
---

<header class="sticky shadow border-b border-neutral-500">
    <nav
        class="bg-primary-950 dark:bg-primary-975 text-neutral-100 px-4 lg:px-6 py-2.5"
    >
        <div
            class="flex flex-wrap justify-between items-center mx-auto max-w-screen-xl"
        >
            <div class="flex gap-3 items-center">
                <img
                    class="h-6 sm:h-9"
                    src="/logo.svg"
                    alt="profile"
                />
                <span
                    class="self-center text-xl font-semibold whitespace-nowrap"
                    >Brinsley Blackwood</span
                >
            </div>

            <Nav />
        </div>
    </nav>
</header>
